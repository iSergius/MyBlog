<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <listener>
        <listener-class>name.isergius.learn.myblog.AppContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>indexController</servlet-name>
        <servlet-class>name.isergius.learn.myblog.ui.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>indexController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>articleController</servlet-name>
        <servlet-class>name.isergius.learn.myblog.ui.ArticleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>articleController</servlet-name>
        <url-pattern>/article/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>markerController</servlet-name>
        <servlet-class>name.isergius.learn.myblog.ui.MarkerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>markerController</servlet-name>
        <url-pattern>/marker/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>noteController</servlet-name>
        <servlet-class>name.isergius.learn.myblog.ui.NoteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>noteController</servlet-name>
        <url-pattern>/note/</url-pattern>
    </servlet-mapping>
    <resource-ref>
        <description>MyBlog Datasource</description>
        <res-ref-name>jdbc/myblog</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <welcome-file-list>
        <welcome-file>none</welcome-file>
    </welcome-file-list>
</web-app>